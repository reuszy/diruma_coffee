    "paths": {
        "/api/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Register",
                "description": "Mendaftarkan akun pelanggan baru",
                "operationId": "c7bb21a0d87049e161b8e4c9b0d909f2",
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "first_name",
                                    "last_name",
                                    "email",
                                    "phone_number",
                                    "password"
                                ],
                                "properties": {
                                    "first_name": {
                                        "type": "string",
                                        "example": "Budi"
                                    },
                                    "middle_name": {
                                        "description": "Opsional",
                                        "type": "string",
                                        "example": "Santoso"
                                    },
                                    "last_name": {
                                        "type": "string",
                                        "example": "Wibowo"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "saputra@gmail.com"
                                    },
                                    "phone_number": {
                                        "type": "string",
                                        "example": "08123456789"
                                    },
                                    "password": {
                                        "description": "Minimal 8 karakter",
                                        "type": "string",
                                        "format": "password",
                                        "example": "password123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Berhasil Register",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "User successfully registered"
                                        },
                                        "user": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Validasi Gagal (Email sudah ada / Password kurang)"
                    }
                }
            }
        },
